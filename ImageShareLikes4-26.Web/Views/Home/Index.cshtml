@using ImageShareLikes4_26.Web
@model HomePageViewModel

<div class="row">
    @foreach (var image in Model.Images)
    {
        <div class="col-md-8 offset-md-2">
            <div class="bg-light p-4 rounded shadow mb-3" style="margin-bottom: 20px; text-align: center;">
                <a href="/home/viewimage?id=@image.Id">
                    <h3>@image.Title</h3>
                    <h5>Uploaded at: @image.DatePosted.ToShortDateString()</h5>
                    <img style="width: 400px;" src="/uploads/@image.ImageName" />
                </a>
            </div>
        </div>
    }
</div>